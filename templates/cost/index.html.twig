{% extends 'base.html.twig' %}

{% block title %}Cost index{% endblock %}

{% block body %}
    <h1>Cost index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Value</th>
                <th>Eur</th>
                <th>Usd</th>
                <th>Ron</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cost in costs %}
            <tr>
                <td>{{ cost.id }}</td>
                <td>{{ cost.description }}</td>
                <td>{{ cost.value }}</td>
                <td>{{ cost.eur }}</td>
                <td>{{ cost.usd }}</td>
                <td>{{ cost.ron }}</td>
                <td>
                    <a href="{{ path('cost_show', {'id': cost.id}) }}">show</a>
                    <a href="{{ path('cost_edit', {'id': cost.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cost_new') }}">Create new</a>
{% endblock %}
