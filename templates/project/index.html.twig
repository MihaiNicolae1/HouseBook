{% extends 'base.html.twig' %}

{% block title %}HouseBook | Projects{% endblock %}

{% block body %}
    <div class="container-fluid"><h1>Projects</h1></div>
    <div class="container">
    <div class="row mb-5 cstm-height-card">
    {% for project in app.user.project %}
		<div class="col-md-4">
			<div class="card">
				<img src={{asset ('/uploads/project_profile_pictures/' ~ project.profilePicture) }} class="card-img-top" alt="...">
				<div class="card-body">
					<h5 class="card-title">{{project.name}}</h5>
					<p class="card-text">{{project.description}}</p>
					<a href="{{ path('project_show', {'slug': project.slug}) }}" class="btn btn-sm btn-primary">Open</a>
                    <div class="d-flex justify-content-between card-text text-muted mt-10"> 
                            <i class="fas fa-eye small"> 1000</i>
                            <i class="far fa-user small"> {{project.user.firstName}} {{project.user.lastName}}</i>
                            <i class="fas fa-calendar-alt small"> Jan 20, 2018</i>
                        
                    </div>
                </div>
			</div>
		</div>
    {% else %}
            <tr>
                <td colspan="3">No projects to show!Please create one!</td>
            </tr>
    {% endfor %}
    </div>
    <a class = "btn btn-primary" href="{{ path('project_new') }}">Create new</a>
{% endblock %}
