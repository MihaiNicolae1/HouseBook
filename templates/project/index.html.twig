{% extends 'base.html.twig' %}

{% block title %}HouseBook | Projects{% endblock %}

{% block body %}
    <h1>Projects</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Project Name</th>
                <th>Beneficiary</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in app.user.project %}
        
     
            <tr>
                <td class="align-middle">{{ project.id }}</td>
                <td class="align-middle">{{ project.name }}</td>
                <td class="align-middle"><img class="img-fluid-2 img-thumbnail" src={{asset ('/uploads/profile_pictures/' ~ project.user.profilePicture) }}></img>{{ project.user.firstName }} {{ project.user.lastName }}</td>
                    
                        
               
                </td>
                <td class="align-middle">
                    <a class = "btn btn-warning" href="{{ path('project_show', {'slug': project.slug}) }}">show</a>
                    <a class = "btn btn-danger" href="{{ path('project_edit', {'slug': project.slug}) }}">edit</a>
                    <a class = "btn btn-success" href="{{ path('stage_new', {'slug': project.slug}) }}">Add stage</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = "btn btn-primary" href="{{ path('project_new') }}">Create new</a>
{% endblock %}
