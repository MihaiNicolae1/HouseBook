{% extends 'base.html.twig' %}

{% block title %}Steps index{% endblock %}

{% block body %}
    <h3>Steps of "{{project.name}}"</h3>

    <table class="table">
        <div class="row second-row">
            {% if steps|length >0%}
            <ol>
            {%endif%}
        {% for step in steps %}
            <li>
                <div class="row cost-row">
                    <div class="col-11 cost-info d-flex">
                        <div class="cost-wrapper d-flex align-items-center">
                            <i class='bx bxs-info-circle'></i>{{ step.name }}
                        </div>

                        <div class="cost-wrapper d-flex align-items-center">
                            <i class='bx bx-euro'></i>
                        </div>

                        <div class="cost-wrapper d-flex align-items-center">
                            <i class='bx bx-dollar'></i>
                        </div>
                        <div class="cost-wrapper d-flex align-items-center">
                            <i class='bx bxs-layer'></i>

                        </div>
                    </div>
                    <div class="col-1 cost-actions d-flex align-items-center">
                        {{ include('steps/_delete_form.html.twig') }}
                        <a class='document-download' href="{{ path('steps_show', {'slug': project.slug}) }}"><i class='bx bx-show bx-sm'></i></a>
                        <a class='document-download' href="{{ path('steps_edit', {'id': step.id}) }}"><i class='bx bx-edit-alt bx-sm'></i></a>
                    </div>
                </div>
            </li>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
            </div>

{% endblock %}
