{% extends 'base.html.twig' %}

{% block title %}Steps{% endblock %}

{% block body %}
    <h1>Steps</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ step.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ step.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ step.slug }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ step.createdAt ? step.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('steps_index') }}">back to list</a>

    <a href="{{ path('steps_edit', {'id': step.id}) }}">edit</a>

    {{ include('steps/_delete_form.html.twig') }}
{% endblock %}
